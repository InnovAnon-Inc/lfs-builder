#! /bin/bash
set -euxo pipefail
(( $#  ))
(( UID ))

cd "$LFS/sources"
[[ -f wget-list ]]
[[ -f md5sums   ]]

REX=()
for k in "$@" ; do
  [[ -e "$k" ]] ||
  REX=("${REX[@]}" "/$k\$")
done
unset k
#(( ${#REX[@]} == $# ))

for k in "${REX[@]}" ; do
  grep -q "$k" wget-list || {
    echo "$k"
    exit 2
  }
done
unset k

URL=()
for k in "${REX[@]}" ; do
  T="$(grep "$k" wget-list)"
  URL=("${URL[@]}" "$T")
done
unset k
#(( ${#URL[@]} == $# ))
(( ${#URL[@]} == ${#REX[@]} ))

# TODO
#tsocks wget -nc ${URL[@]}
#TSOCKS_PASSWORD=abc123 tsocks wget -nc ${URL[@]}
#wget -nc "${URL[@]}"
#(( ! ${#URL[@]} )) ||
#curl --proxy "$SOCKS_PROXY" "${URL[@]}"
for url in "${URL[@]}" ; do
  f="$(basename "$URL")"
  curl --proxy "$SOCKS_PROXY" -o "$f" "$url"
done
 
for k in "$@" ; do
  awk '$2 == "'"$k"'"' md5sums |
  md5sum -c -
done
unset k

exec tar xf "$1"

